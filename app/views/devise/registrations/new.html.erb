<h2 class="text-center">Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f| %>
  <%= devise_error_messages! %>

  <div class="container">
    <div class="row">
      <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">
        <div class="field">
          <%= f.text_field :first_name, autofocus: true %>
        </div>

        <div class="field">
          <%= f.text_field :last_name %>
        </div>

        <div class="field">
          <%= f.email_field :email %>
        </div>

        <div class="field">
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="actions orange-btn">
          <%= f.submit "Sign up" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
