      <h1 id="title">BOOKBIBI</h1>
      <h2 id="baseline">Pour vous sentir comme chez bibi.</h2>




<h2 class="text-center">Sign up</h2>
<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f| %>

        <div class="field">
          <%= f.text_field :first_name, autofocus: true %>
        </div>

        <div class="field">
          <%= f.text_field :last_name %>
        </div>

        <div class="field">
          <%= f.email_field :email %>
        </div>

        <div class="field">
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="actions orange-btn">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


</div>