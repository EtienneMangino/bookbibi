<h1 class="text-center"><%= @user.first_name %> <%= @user.last_name %></h1>
<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <p><strong>First name:</strong> <%= @user.first_name %></p>
      <div class="spacer"></div>
      <p><strong>Last name:</strong> <%= @user.last_name %></p>
      <div class="spacer"></div>
      <p><strong>Email:</strong> <%= @user.email %></p>
      <div class="spacer"></div>
      <%= link_to(edit_user_registration_path, class: "btn btn-primary") do %>
        <i class="fa fa-pencil">   Update profile</i>
      <% end %>
      <div class="spacer"></div>
      <%= link_to(manage_all_flats_path, class: "btn btn-primary") do %>
        <i class="fa fa-building">    Manage my flats</i>
      <% end %>
      <div class="spacer"></div>
      <%= link_to(bookings_path, class: "btn btn-primary") do %>
        <i class="fa fa-calendar">    See my bookings</i>
      <% end %>
    </div>
  </div>
</div>