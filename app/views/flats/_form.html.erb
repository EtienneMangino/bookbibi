<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">
      <%= bootstrap_form_for(@flat, class: 'form') do |f| %>
        <div class="field">
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.text_field :address %>
        </div>
        <div class="field">
          <%= f.text_field :city %>
        </div>
        <div class="field">
          <%= f.text_area :description %>
        </div>
        <div class="field">
          <%= f.file_field :picture %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>