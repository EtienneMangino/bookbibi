<h1 class="text-center">Your booking</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">

      <h2 class="text-center"><%= @flat.title %></h2>

      <%= image_tag @flat.picture.url(:medium) %>

      <p>
        <strong>Address:</strong>
        <%= @flat.address %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @flat.description %>
      </p>

      <p>
        <strong>Owner:</strong>
        <%= @flat.user.first_name %>
        <%= @flat.user.last_name %>
      </p>

      <p>
        <strong>Start Date:</strong>
        <%= @booking.start_date %>
      </p>

      <p>
        <strong>End Date:</strong>
        <%= @booking.end_date %>
      </p>
      <div class="text-center">
      <%= link_to 'Back Home', root_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

