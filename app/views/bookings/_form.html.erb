
<h2 class='text-center'>Book this Flat !</h2>
<%= bootstrap_form_for([@flat, @booking], class: 'form') do |f| %>
  <div class="field">
    <%= f.date_field :start_date %>
  </div>
   <div class="field">
    <%= f.date_field :end_date %>
  </div>
  <div class="actions text-center">
    <%= f.submit "Book it !"  %>
  </div>
<% end %>


