
<%= bootstrap_form_for([@flat, @booking], class: 'form') do |f| %>
  <div class="form-inline" id="bookform" role="form">
    <div class="form-group">
      <div class="field">
        <%= f.date_field :start_date %>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.date_field :end_date %>
      </div>
    </div>
    <div class="form-group">
      <div class="actions text-center">
        <%= f.submit "Book it !"  %>
      </div>
    </div>
  </div>
<% end %>